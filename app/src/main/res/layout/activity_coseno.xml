<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cosenoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coseno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="@string/calcular_coseno"
                android:textColor="#FF5733"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/angulocoseno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="@string/angulo_de_coseno"
                android:inputType="numberDecimal"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/gradcoseno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grados_coseno"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radiancoseno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radianes_coseno"/>
            </RadioGroup>

            <Button
                android:id="@+id/calcular_coseno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calcula_coseno"
                android:backgroundTint="#FF5733"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/lblresultadocoseno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>